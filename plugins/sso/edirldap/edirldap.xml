<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="sso" method="upgrade">
<!-- original based on JAuthTools - refer to source for acknowledgments -->
	<name>plg_sso_edirldap</name>
	<author>Shaun Maunder</author>
	<creationDate>July 2011</creationDate>
	<copyright>Copyright (C) 2011 Shaun Maunder. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>shaun@shmanic.com</authorEmail>
	<authorUrl>www.shmanic.com</authorUrl>
	<version>1.0.8</version>
	<description>PLG_SSO_EDIRLDAP_XML_DESCRIPTION</description>
	<files>
		<filename plugin="edirldap">edirldap.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_sso_edirldap.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_sso_edirldap.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="auth_plugin" type="text" 
					size="20" 
					default="jmapmyldap" 
					label="PLG_EDIRLDAP_FIELD_AUTHPLUGIN_LABEL" 
					description="PLG_EDIRLDAP_FIELD_AUTHPLUGIN_DESC" 
				/>
				<field name="ip_rule" type="list"
					default="allowall"
					description="PLG_EDIRLDAP_FIELD_IPRULE_DESC"
					label="PLG_EDIRLDAP_FIELD_IPRULE_LABEL"
				>
					<option value="allowall">PLG_EDIRLDAP_FIELD_IPRULE_ALLOW</option>
					<option value="denyall">PLG_EDIRLDAP_FIELD_IPRULE_DENY</option>
				</field>
				<field name="ip_list" type="textarea" 
					default="" 
					cols="30" rows="10" 
					label="PLG_EDIRLDAP_FIELD_IPLIST_LABEL" 
					description="PLG_EDIRLDAP_FIELD_IPLIST_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
